pipeline {
    agent any

    tools {
        maven 'maven-3.9.11'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/viji-sarvesh/ciexpipeline.git'
            }
        }

        stage('Download Artifact from CI') {
            steps {
                copyArtifacts(
                    projectName: 'item-1',   // name of your CI job
                    selector: lastSuccessful()
                )
            }
        }

        stage('Deploy') {
            steps {
                bat 'java -jar target/ciex-app-1.5.jar'
            }
        }
    }
}
